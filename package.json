{
  "name": "claude-jsqualityhooks",
  "version": "1.0.0",
  "description": "Claude Code Hooks extension that validates and auto-fixes TypeScript/JavaScript code",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "claude-jsqualityhooks": "./dist/cli.cjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "claude",
    "hooks",
    "typescript",
    "javascript",
    "linting",
    "formatting",
    "biome",
    "validation"
  ],
  "author": "DKMaker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkmaker/claude-jsqualityhooks"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "commander": "14.0.0",
    "execa": "9.6.0",
    "fast-glob": "3.3.3",
    "yaml": "2.8.1",
    "zod": "4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/node": "22.14.1",
    "@vitest/coverage-v8": "3.2.4",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
